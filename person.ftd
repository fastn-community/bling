-- end: ftd.row

-- end: ftd.column

-- ftd.column:
min-height.fixed.px: 18
width: fill-container

-- ftd.text: $persona-card.address
if: { $persona-card.show-address }
role: $inherited.types.fine-print
color: $inherited.colors.text

-- end: ftd.column

-- end: ftd.column

-- ftd.text:
text: $persona-card.body
